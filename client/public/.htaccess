<IfModule LiteSpeed>
    RewriteEngine On

    # Redirect from root ("/") to "/en-ENwRL"
    RewriteRule ^/?$ en-ENwRL [R=301,L]

    # Serve index.html for the /id and /en-ENwRL routes, but only if the file or directory doesn't exist
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(id|en-ENwRL)(/.*)?$ index.html [QSA,L]

    # Return a 404 status code for all other routes
    RewriteRule .* - [R=404,L]

    # Optional: Add CORS headers for API or assets
    Header always set Access-Control-Allow-Origin "*"
</IfModule>